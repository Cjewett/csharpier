<Project>
    <PropertyGroup>
        <CSharpierDllPath>$(MSBuildThisFileDirectory)../tools/csharpier/dotnet-csharpier.dll</CSharpierDllPath>
    </PropertyGroup>
    <Target 
        Name="CSharpierFormat"
        BeforeTargets="Build">
        <Exec Command="dotnet $(CSharpierDllPath) $(MSBuildProjectDirectory)" />
    </Target>
</Project>
