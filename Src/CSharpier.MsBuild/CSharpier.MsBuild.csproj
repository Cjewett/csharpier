<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="../../CSharpier.Targets"/>
    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <PackageId>CSharpier.MsBuild</PackageId>
        <CSharpierOutputDir>../CSharpier/bin/Release/net5.0</CSharpierOutputDir>
    </PropertyGroup>

    <!--
        Note: There's not <PackageReference /> here because that would cause msbuild to
        make it a dependency in the output package, which causes all sorts of issues as
        CSharpier is a net5.0 project, not a netstandard.
    -->
    <Target Name="CheckCSharpierBuilt" BeforeTargets="Build" Condition="!(Exists($(CSharpierOutputDir)))">
        <Error Text="Ensure csharpier has been built (published) in release configuration" />
    </Target>

    <ItemGroup>
        <Content Include="build/*" PackagePath="build/" />
        <Content Include="$(CSharpierOutputDir)/**" PackagePath="tools/csharpier" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\CSharpier\CSharpier.csproj" />
    </ItemGroup>
</Project>
